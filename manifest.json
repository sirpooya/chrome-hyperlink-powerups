{
  "manifest_version": 3,
  "name": "Tab Link Ops",
  "version": "1.0",
  "description": "Forces all links to open in the same tab instead of new tab or windows",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Toggle extension on/off"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
} 